<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../layouts/head') %>
    </head>
    <header>
        <%- include('../layouts/header') %>
    </header>
    <main id="sortable">

        <% output.forEach(object=>{ %>
            <section class="ui-state-default watchlist">
                <div>
                    <form method="post" action="/delete/<%=object.id%>?_method=delete" method="post">
                        <details>
                            <summary><h3> <%= object.companyName %> </br> Ticker: <%= object.symbol %> </br>Current Price: <%= object.current_price %> </h3></summary>
                                        
                            <iframe src='https://wallmine.com/widgets/chart/<%=object.symbol%>' async frameborder='0' allowtransparency='true' scrolling='no' style='width: 100%; height: 450px'></iframe>

                            <p> Sentiment Score: <%= object.sentimentResult %> <br> Sustainability Score: <%= object.greencheck %><br> Overall Stock Score (1-10, 10 being the Best Score Possible): <%= object.stockScore %> <br> Industry: <%= object.sector %></p>
                            
                            <input type="hidden" name="companyName" value="<%= output.companyName %>">
                            <input type="hidden" name="symbol" value="<%= output.symbol %>">
                            <input type="hidden" name="current_price" value="<%= output.current_price %>">
                            <input type="hidden" name="sentimentResult" value="<%= output.sentimentResult %>">
                            <input type="hidden" name="greencheck" value="<%= output.greencheck %>">
                            <input type="hidden" name="stockScore" value="<%= output.stockScore %>">
                            <input type="hidden" name="sector" value="<%= output.sector %>">


                            <button>Remove from Watchlist</button> 
                        </details>
                    </form>
                </div>
            </section>
        <% }) %>

    </main>
    <footer>
        <%- include('../layouts/footer') %>
    </footer>
</html>
